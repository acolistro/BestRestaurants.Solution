  <br>
  <input type="submit" value="Search Cuisines" class="btn btn-success my-2 my-sm-0">
  }
</div>
    <button class="btn btn-warning">@Html.ActionLink("See all cuisines", "Index", "Cuisines")</button>
    <button class="btn btn-warning">@Html.ActionLink("Add a new cuisine", "Create", "Cuisines")</button>
