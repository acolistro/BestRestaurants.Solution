@{
  Layout = "_Layout";
}

<div class="jumbotron">
  <h1 class=splash-page-header>Welcome to Best Restaurant!</h1>
  <h2>A restaurant finder to suit your taste.</h2>
</div>


<div class="button-parent">
  <div class="button-group">
  
  <div class="form-group w-50" id="search">
