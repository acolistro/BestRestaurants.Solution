@{
  Layout = "_Layout";
}

@using BestRestaurants.Models;
@using System.Collections.Generic;
@model List<BestRestaurants.Models.Cuisine>;

<div class="jumbotron">
  <h1>Cuisines</h1>
</div>

  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
      <div class="card bg-warning my-5">
        <div class="card-body">
          @if (@Model.Count == 0)
          {
            <h3>No cuisines have been added yet!</h3>
          } 
            @foreach(Cuisine cuisine in Model)
            {
                <p>@Html.ActionLink($"{cuisine.Name}", "Details", new { id = cuisine.CuisineId })</p>
            }

            <hr/>

            <p>@Html.ActionLink("Add new cuisine", "Create")</p>

            <p>@Html.ActionLink("Home", "Index", "Home")</p>

        </div>  
      </div>
    </div>
  </div>        