@{
  Layout = "_Layout";
}
@using BestRestaurants.Models;
@model List<BestRestaurants.Models.Cuisine>

<h1>SEARCH</h1>

@if(Model.Count == 0)
{
  <p> No cuisines match this search </p>
}
else
{
  <ul>
    @foreach(Cuisine cuisine in Model)
    {
      <li> @Html.ActionLink($"{cuisine.Name}", "Details", new {id = cuisine.CuisineId}) : @cuisine.Name</li>
    }
  </ul>
}