@{
  Layout = "_Layout";
}

@using BestRestaurants.Models
@model BestRestaurants.Models.Cuisine
<div class="row">
  <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
    <div class="card bg-warning my-5">
      <div class="card-body">
        <h2>Restaurants with </h2>
        <h2>@Html.DisplayFor(model => model.Name)</h2>
        <hr />

        @if (Model.Restaurants.Count == 0)
        {
          <p>No restaurants of this cuisine type.</p>
        }

        @foreach (Restaurant restaurant in @Model.Restaurants)
        {
          <p>@Html.ActionLink($"{restaurant.Name}", "Details", "Restaurants", new { id = restaurant.RestaurantId })</p>
        }

        <hr/>

        <p>@Html.ActionLink("Back to List", "Index")</p>
        <p>@Html.ActionLink("Edit Cuisine", "Edit", new { id = Model.CuisineId })</p>
        <p>@Html.ActionLink("Delete Cuisine", "Delete", new { id = Model.CuisineId })</p>
      </div>
    </div>
  </div>
</div>