@{
  Layout = "_Layout";
}

@using BestRestaurants.Models;
@using System.Collections.Generic;
@model List<BestRestaurants.Models.Restaurant>;


  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
      <div class="card bg-warning my-5">
        <div class="card-body">
          <h1>Restaurants</h1>
          <hr>
          @if (@Model.Count == 0)
          {
            <h3>No restaurants have been added yet!</h3>
          } 
          <ul>
            @foreach(Restaurant restaurant in Model)
            {
                <li>@Html.ActionLink($"{restaurant.Name}", "Details", new { id = restaurant.RestaurantId }) </li>
            }

            <hr/>

            <p>@Html.ActionLink("Add new restaurant", "Create")</p>

            <p>@Html.ActionLink("Home", "Index", "Home")</p>
          </ul>
        </div>
      </div>
    </div>
  </div>        